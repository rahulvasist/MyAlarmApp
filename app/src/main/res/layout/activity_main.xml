<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rahul.myalarmapp.MainActivity">


    <Button
        android:text="Set Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="51dp"
        android:id="@+id/setAlarmButton"
        android:onClick="setAlarmClicked" />

    <Button
        android:text="Cancel Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/setAlarmButton"
        android:layout_toEndOf="@+id/setAlarmButton"
        android:layout_marginStart="64dp"
        android:id="@+id/cancelAlarmButtong"
        android:onClick="cancelAlarmClicked" />

    <TextView
        android:text="Final Alarm time: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cancelAlarmButtong" />

    <TextView
        android:text="Alarm Interval: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="25dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text1"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="16dp"
        android:id="@+id/finalAlarmTxtView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beforeMinTxtView"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/finalAlarmTxtView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intervalMinTxtView"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/beforeMinTxtView" />

    <TextView
        android:text="Start Alarm Before: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/text1"
        android:layout_alignStart="@+id/text1" />

</RelativeLayout>
